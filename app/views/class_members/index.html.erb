<div class="page-header">
  <h1>
    Class members

      <a href="/class_members/new" class="btn btn-lg btn-success">New Class member</a>
  
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Student</th>
        <th>Class</th>
        <th>Class Member Id</th>
        <th>Actions</th>
      </tr>

      <% @class_members.each do |class_member| %>
      <tr>
        <td>
          <% if class_member.student.present? %>
            <a href="/students/<%= class_member.student.id %>">
              <%= class_member.student.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if class_member.class.present? %>
            <a href="/courses/<%= class_member.course.id %>">
              <%= class_member.course.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if class_member.class.present? %>

            <p>  <%= class_member.id %></p>

          <% end %>
        </td>
        <td>
          <a href="/class_members/<%= class_member.id %>" class="btn btn-primary">Show</a>

          <%if class_member.student.user.username == current_user.username %>

            <a href="/delete_class_member/<%= class_member.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
</div>
