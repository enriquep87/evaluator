
<div class="page-header">
  <h1>
    Users

  </h1>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
          <%if user.username == current_user.username %>
            <a href="/users/edit" class="btn btn-warning">Edit</a>

          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
