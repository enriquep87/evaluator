<div class="page-header">
  <h3>Session Comment #<%= @session_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Course member</dt>
      <dd>
        <% if @session_comment.class_member.present? %>
          <a href="/course_members/<%= @session_comment.course_member_id %>">
            <%= @session_comment.class_member.student_id %>
          </a>
        <% end %>
      </dd>

      <dt>Summary</dt>
      <dd><%= @session_comment.summary %></dd>

      <dt>Body</dt>
      <dd><%= @session_comment.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/session_comments" class="btn btn-primary">
        Back
      </a>
      <a href="/session_comments/<%= @session_comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_session_comment/<%= @session_comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Session comment has many reviews -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Reviews
      </li>

      <% @session_comment.reviews.each do |review| %>
        <li class="list-group-item">
          <a href="/reviews/<%= review.id %>">
            <%= review.session_comment_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/reviews/<%= review.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_review" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for session_comment_id -->
      <div class="form-group">
        <label for="session_comment_id" class="control-label">
          Session comment
        </label>

        <%= select_tag(:session_comment_id, options_from_collection_for_select(SessionComment.all, :id, :course_member_id), :class => "form-control") %>
      </div>

      <!-- Label and input for course_member_id -->
      <div class="form-group">
        <label for="course_member_id" class="control-label">
          Course member
        </label>

        <%= select_tag(:course_member_id, options_from_collection_for_select(CourseMember.all, :id, :student_id), :class => "form-control") %>
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Review
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
