<div class="page-header">
  <h1>
    Session comments
    <a href="/session_comments/new" class="btn btn-lg btn-success">New Session comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course member</th>
        <th>Summary</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @session_comments.each do |session_comment| %>
      <tr>
        <td>
          <% if session_comment.class_member.present? %>
            <a href="/course_members/<%= session_comment.class_member.id %>">
              <%= session_comment.class_member.student_id %>
            </a>
          <% end %>
        </td>
        <td><%= session_comment.summary %></td>
        <td><%= session_comment.body %></td>
        <td>
          <a href="/session_comments/<%= session_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/session_comments/<%= session_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_session_comment/<%= session_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @session_comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
