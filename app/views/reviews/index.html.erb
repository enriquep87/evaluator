<div class="page-header">
  <h1>
    Reviews

  </h1>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Class comment owner</th>
        <th>Class member reviewer</th>
        <th>Rating</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <%if review.class_comment.class_member.student.user.username == current_user.username%>
          <td>
            <% if review.class_comment.present? %>
              <a href="/class_comments/<%= review.class_comment.id %>">
                <%= review.class_comment.class_member.id %>
              </a>
            <% end %>
            <p><%=review.class_comment.critiqs.pluck(:id)%></p>

          </td>
          <td>
            <% if review.class_member.present? %>
              <a href="/class_members/<%= review.class_member.id %>">
                <%= review.class_member.student.name %>
              </a>
            <% end %>
          </td>
          <td><%= review.rating %></td>
          <td>
            <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
            <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>

        <%else%>
        <p>No one has reviewed your comments yet</p>
        <% end %>
      </tr>
      <% end %>
    </table>
    <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
